# HiveCouncil API Configuration

# OpenAI
OPENAI_API_KEY=sk-...
# Optional: Specify model (defaults to gpt-4o)
# OPENAI_MODEL=gpt-4o
# Available: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-4, gpt-3.5-turbo

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...
# Optional: Specify model (defaults to claude-sonnet-4-20250514)
# ANTHROPIC_MODEL=claude-sonnet-4-20250514
# Available: claude-opus-4-20250514, claude-sonnet-4-20250514, claude-sonnet-3-5-20241022, claude-haiku-3-5-20241022

# Google
GOOGLE_API_KEY=...
# Optional: Specify model (defaults to gemini-2.0-flash-exp)
# GOOGLE_MODEL=gemini-2.0-flash-exp
# Available: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash, gemini-pro

# Grok (xAI)
GROK_API_KEY=...
# Optional: Specify model (defaults to grok-beta)
# GROK_MODEL=grok-beta
# Available: grok-beta, grok-vision-beta

# Database
DATABASE_URL=sqlite:///./hivecouncil.db

# Optional: Default Settings
DEFAULT_CHAIR=anthropic
DEFAULT_ITERATIONS=3
DEFAULT_TEMPLATE=balanced
DEFAULT_PRESET=balanced
